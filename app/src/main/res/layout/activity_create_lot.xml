<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lots_create_form"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0">

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Название"
                    android:ems="10"
                    android:layout_weight="1.0"
                    android:inputType="textPersonName"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <EditText
                    android:gravity="top"
                    android:id="@id/description"
                    android:layout_width="fill_parent"
                    android:layout_height="140.0dip"
                    android:hint="Описание"
                    android:ems="10"
                    android:inputType="textMultiLine"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/imagePreviewRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <!--todo image карусель с кнопкой большой (+)-->

                </android.support.v7.widget.RecyclerView>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:id="@+id/startingPrice"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Стартовая цена"
                    android:ems="10"
                    android:layout_weight="1.0"
                    android:inputType="numberDecimal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:id="@+id/auctionStep"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Шаг аукциона"
                    android:ems="10"
                    android:layout_weight="1.0"
                    android:inputType="numberDecimal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">
                <EditText
                    android:id="@+id/duration"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Продолжительность"
                    android:ems="10"
                    android:layout_weight="1.0"
                    android:inputType="date" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ExpandableListView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>